<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.myweb.www.repository.BoardDAO">
  
  <insert id="insert" parameterType="com.myweb.www.domain.BoardVO">
  	insert into board(title, writer, content)
  	values(#{title}, #{writer}, #{content})
  </insert>
  
  <select id="selectOneBno" resultType="long">
    select max(bno) from board;
  </select>
  
  <select id="getList" resultType="com.myweb.www.domain.BoardVO">
  	select * from board 
  	<include refid="search"></include>
  	order by bno desc limit #{pageStart}, #{qty}
  </select>
  
  <select id="getDetail" resultType="com.myweb.www.domain.BoardVO">
  	select * from board where bno=#{bno}
  </select>
  
  <update id="modify">
  	update board set title=#{title}, content=#{content}, mod_at=now() where bno = #{bno}
  </update>
  
  <delete id="delete" >
  	delete from board where bno=#{bno}
  </delete>
  
  <update id="readCount">
  	update board set read_count = read_count + #{cnt} where bno = #{bno}
  </update>
  
  <select id="getTotalCount" resultType="int">
  	select count(bno) from board <include refid="search"></include>
  </select>
  
  <update id="listCmtQty">
  	update board set cmt_qty = (select count(cno) from comment where bno = board.bno)
  </update>
  
  <update id="detailCmtQty">
  	update board set cmt_qty = (select count(cno) from comment where bno = #{bno})
  </update>
  
  <update id="modifyFile" parameterType="com.myweb.www.domain.BoardVO">
  	update board set title = #{title}, content = #{content} where bno = #{bno}
  </update>
  
  
  <sql id="search">
  	<if test="type != null">
  		<trim prefix="where (" suffix=")" prefixOverrides="OR">
  			<foreach collection="typeToArray" item="type">
  				<trim prefix="OR">
  					<choose>
  						<when test="type == 't'.toString()">
  							title like concat('%', #{keyword}, '%')
  						</when>
  						<when test="type == 'w'.toString()">
  							writer like concat(#{keyword})
  						</when>
  						<when test="type == 'c'.toString()">
  							content like concat('%', #{keyword}, '%')
  						</when>
  					</choose>
  				</trim>
  			</foreach>
  		</trim>
  	</if>
  </sql>
  	
  </mapper>